@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Minhas Transações</h3>

<table class="table table-bordered">

    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>ID</th>
            <th>DATA</th>
            <th>TIPO</th>
            <th>VALOR</th>
            <th>HISTORICO</th>
            <th>CONTA</th>
            <th>PLANO DE CONTAS</th>
        </tr>
    </thead>

    @{
        foreach (var item in (List<TransacaoModel>)ViewBag.ListaTransacao)
        {
            <tbody>
                    <tr>
                        <td><button type="button" class="btn  btn-primary" onclick="Editar(@item.Id.ToString())">Editar</button></td>
                        <td><button type="button" class="btn  btn-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
                        <td>@item.Id.ToString()</td>
                        <td>@item.Data.ToString()</td>
                        <td>@item.Tipo.ToString()</td>
                        <td>R$@item.Valor.ToString()</td>
                        <td>@item.Descricao.ToString()</td>
                        <td>@item.NomeConta.ToString()</td>
                        <td>@item.DescricaoPlanoConta.ToString()</td>
                       </tr>
            </tbody>

        }

    }

</table>


<button type="button" class="btn btn-block btn-primary" onclick= "RegistarTransacao()">Registrar Transação</button>


<script>
    function RegistarTransacao()
    {
        window.location.href = "../Transacao/Registrar";
    }
    function Excluir(Id)
    {
        window.location.href = "../Transacao/ExcluirTransacao/" + id
    }
    function Editar(Id)
    {
        window.location.href = "../Transacao/Registrar/" + id
    }
</script>
