@model PlanoContasModel
<h1>Criar Plano de Contas</h1>

@{
    var vDescricao = "";
    var vTipo = "";
    var vId = 0;

    try
    {
        vId = int.Parse(ViewBag.Registro.Id.ToString());
        vDescricao = ViewBag.Registro.Descricao.ToString();
        vTipo = ViewBag.Registro.Tipo.ToString();

    }
    catch { }
}

<form asp-controller="PlanoContas" asp-action="CriarPlanoContas">
    <input type="hidden"asp-for="Id" value="@vId"/>
    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" class="form-control" asp-for="@Model.Descricao" value="@vDescricao"/>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>

        @{
            if (vTipo == "Receita")
            {
                <div class="radio"><label><input type="radio" asp-for="@Model.Tipo" value="Receitas" checked />Receita</label></div>
                <div class="radio"><label><input type="radio" asp-for="@Model.Tipo" value="Despesas" unchecked />Despesas</label></div>
            }
            else
            {
                <div class="radio"><label><input type="radio" asp-for="@Model.Tipo" value="Receitas" checked />Receita</label></div>
                <div class="radio"><label><input type="radio" asp-for="@Model.Tipo" value="Despesas" unchecked />Despesas</label></div>
            }

          }

    </div>


    <button type="submit" class="btn btn-block btn-success">Criar Plano de Conta</button>
</form>
