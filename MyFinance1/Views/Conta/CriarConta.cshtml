@model ContaModel
@{
    ViewData["Title"] = "CriarConta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Conta</h1>

<form asp-controller="Conta" asp-action="CriarConta">

    <div class="form-group">
        <label>Nome:</label>
        <input type="text" class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Saldo:</label>
        <input type="text" class="form-control" asp-for="Saldo" />
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Criar Conta</button>
</form>

